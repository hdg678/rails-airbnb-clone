<div class="product-banner" style="background-image: url(
  <% if @equipment.pictures? %>
  <%= cl_image_path @equipment.pictures.first.path, height: 800, width: 1200, crop: :fill %>
  <% else %>
  <%= image_path "background.jpg" %>
  <% end %>
  );">
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @equipment.title %></h1>
      <p>Description: <%= @equipment.description %></p>
      <p>Instructions: <%= @equipment.instructions %></p>
      <p>Category: <%= @equipment.category %></p>
      <p>Price: $<%= @equipment.price %></p>
      <p>Owner: <%= @equipment.user.first_name %> <%= @equipment.user.last_name %></p>
    </div>
    <div class="col-xs-6">
      <% @equipment.pictures.each do |picture| %>
      <div class="card" style="background-image: url(<%= cl_image_path picture.path, height: 400, width: 600, crop: :fill %>);">
      </div>
        <% end %>
      </div>
        <%= link_to "Book Now", new_equipment_booking_path(@equipment), class: "btn btn-danger"%>
    </div>
  </div>
</div>
