<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5">
      <div id="map" style="width: 100%; height: 600px;">
      <% content_for(:after_js) do %>
        <script>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
        </script>
      <% end %>
      </div>
    </div>
    <div class="col-sm-7 text-center">
      <div class="equipment-index-title">
        <h2>Available <%= image_tag("gear.png") %></h2>
      </div>
      <div class="cards">
        <div class="row">
          <% @equipment.each do |equipment| %>
            <div class="col-xs-12 col-sm-6">
              <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(
              <% if equipment.pictures? %>
                <%= cl_image_path equipment.pictures.first.path, height: 150, width: 250, crop: :fill %>
                <% else %>
                <%= image_path "background.jpg" %>
                <% end %>
              );">
                <div class="card-rating text-center">
                </div>
                <div class="card-description">
                  <h2><%= equipment.title %></h2>
                  <p><%= equipment.description %></p>
                  <p>Category: <%= equipment.category %></p>
                  <p>$<%= equipment.price %>/day</p>
                </div>
                <%= link_to '', equipment_path(equipment), class: 'card-link' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
