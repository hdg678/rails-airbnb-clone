<div class="container-fluid text-center" style="background-color: whitesmoke">
  <div class="equipment-index-title">
    <h2>My booked <%= image_tag("gear.png") %></h2>
  </div>
  <div class="bookings">
    <% @user.bookings.each do |booking| %>
    <div class="product">
      <div class='product-upvote'>
        <i class="fa fa-calendar" aria-hidden="true"></i>
        <div class='product-count'><%= booking.pickup %></div>
      </div>
      <% if booking.equipment.pictures? %>
      <%= cl_image_tag booking.equipment.pictures.first.path, height: 100, width: 200, crop: :fill, class: "product-image hidden-xs"; %>
      <% else %>
      <%= image_tag "background.jpg", height: 100, width: 200, crop: :fill, class: "product-image hidden-xs"; %>
      <% end %>
      <div class='product-body'>
        <h3 id="title"><%= booking.equipment.title %></h3>
        <h5 id="category"><%= booking.equipment.category %></h5>
        <p id="user"><%= booking.equipment.address %></p>
      </div>
      <ul class="list-inline product-controls hidden-sm hidden-xs">
        <li>
          <%= link_to edit_booking_path(booking) do %>
          <i class="fa fa-wrench"></i>
          <% end %>
        </li>
        <li>
          <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-ban"></i>
          <% end %>
        </li>
        <li>
        <%= link_to equipment_path(booking.equipment) do %>
          <i class="fa fa-eye"></i>
        <% end %>
        </li>
      </ul>
    </div>
    <% end %>
  </div>
</div>
